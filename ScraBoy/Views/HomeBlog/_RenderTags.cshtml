@model ScraBoy.Features.CMS.HomeBlog.BlogViewModel

@if(ViewBag.Single)
{
    foreach(var item in Model.Post.Tags.Distinct())
    {
        <a target="_blank" class="label label-success" href="@Url.Action("Tag",new { tagId = item })" rel="nofollow">@item</a>
    }
}
else
{
    foreach(var item in Model.Post.Tags.Distinct().Take(3))
    {
        <a target="_blank" class="label label-success" href="@Url.Action("Tag",new { tagId = item })" rel="nofollow">@item</a>
    }
    if(Model.Post.Tags.Distinct().Count() > 3)
    {
        <a class="text-muted" target="_blank" href=@Url.Action("Post","Homeblog",new { postId = Model.Post.Id })>
            +@(Model.Post.Tags.Distinct().Count() - 3) more
        </a>

    }
}
