<div class="card my-4">
    <h5 class="card-header">Search</h5>
    <div class="card-body">
        @using(Html.BeginForm("Search","HomeBlog",FormMethod.Get))
        {

            <div class="input-group">
                <input type="text" class="form-control" value="@ViewBag.Filter" name="search" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="submit">Go!</button>
                </span>
            </div>
        }
    </div>
</div>