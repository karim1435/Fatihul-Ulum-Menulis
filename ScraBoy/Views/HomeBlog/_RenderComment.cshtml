@model IEnumerable<ScraBoy.Features.CMS.HomeBlog.CommentViewModel>

@foreach(var item in Model)
{
    <div class="media mb-4">
        <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
        <div class="media-body">
            <a href="@Url.Action("Profile","User",new { username= item.User.UserName})" ><h5 class="mt-0">@item.User.UserName</h5> </a>  @item.Comment.PostedOn.TimeAgo()
           <p><b>@item.Comment.Content</b> </p>
        </div>
    </div>

}