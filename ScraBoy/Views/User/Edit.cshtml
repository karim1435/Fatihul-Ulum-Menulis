@model ScraBoy.Features.CMS.User.UserViewModel

@{

    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Post/_PostLayout.cshtml";

}
<h2>Edit Profile</h2>

@using(Html.BeginForm(null,null,FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true,"",new { @class = "text-danger" })

        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(model => model.DisplayName,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                @Html.LabelFor(model => model.DisplayName)
                @Html.ValidationMessageFor(model => model.DisplayName,"",new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(model => model.Born,new { htmlAttributes = new { @class = "form-control datepicker",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                @Html.LabelFor(model => model.Born)
                @Html.ValidationMessageFor(model => model.Born,"",new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="form-label-group">
                <b>Tell About Yourself</b>
                @Html.TextAreaFor(model => model.Description,10,40,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                @Html.ValidationMessageFor(model => model.Description,"",new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UrlImage,htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="btn btn-primary" />
                <p>@Model.UrlImage"</p>
                @Html.ValidationMessageFor(model => model.UrlImage,"",new { @class = "text-danger" })
            </div>
        </div>

        @if(User.IsInRole("admin"))
        {
            <div class="form-group">
                <p>Select Category</p>
                <div class="form-label-group">
                    @Html.DropDownListFor(
                 model => model.SelectedRole,Model.Roles,
                 new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" }
             )
                    @Html.ValidationMessageFor(model => model.SelectedRole,"",new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-label-group">
                    @Html.EditorFor(model => model.Bonus,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                    @Html.LabelFor(model => model.Bonus)
                    @Html.ValidationMessageFor(model => model.Bonus,"",new { @class = "text-danger" })
                </div>
            </div>
        }
        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(model => model.InstagramProfile,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                @Html.LabelFor(model => model.InstagramProfile)
                @Html.ValidationMessageFor(model => model.InstagramProfile,"",new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(model => model.FbProfile,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                @Html.LabelFor(model => model.FbProfile)
                @Html.ValidationMessageFor(model => model.FbProfile,"",new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="form-label-group">
                @Html.EditorFor(model => model.TwitterProfile,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                @Html.LabelFor(model => model.TwitterProfile)
                @Html.ValidationMessageFor(model => model.TwitterProfile,"",new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}
