@model ScraBoy.Features.Lomba.Audience.Participant

@{
    var content = (ScraBoy.Features.Lomba.Contest.Competition)ViewBag.contest;
}

@{
    ViewBag.Title = "Fatihul Ulum Contest - Join Contest " + content.Title;
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    <br />
    <h2>Submit Contest</h2>
    <hr />
    @Html.Partial("~/Views/Competition/_InfoContest.cshtml",content)

    @using(Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true,"",new { @class = "text-danger" })

            <div class="form-group">
                <div class="form-label-group">
                    @Html.EditorFor(model => model.Title,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                    @Html.ValidationMessageFor(model => model.Title,"",new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-label-group">
                    @Html.TextAreaFor(model => model.Content,20,40,new { htmlAttributes = new { @class = "form-control",@placeholder = "Enter Title",@autofocus = "autofocus" } })
                    @Html.ValidationMessageFor(model => model.Content,"",new { @class = "text-danger" })
                </div>
            </div>
            <p class="text-info">Pastikan semuanya benar, Anda tidak bisa mengedit setelah submit contest.</p>
            <button type="submit" class="btn btn-primary">Submit Contest</button>
        </div>
        <br />
    }


</div>
<script src="~/Scripts/tinymce/tinymce.js"></script>
<script src="~/Scripts/main.js"></script>
