@model ScraBoy.Features.Hadist.Book.Kitab

<div style="background-color:#EBC390" class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <div class="table text-justify" id="dataTable" width="100%" cellspacing="0">
                <p style="font-size:20px" ; dir="rtl">
                    @Model.Number - @Model.Content
                </p>
                <a dir="ltr" class="label label-dark" href="@Url.Action("FindByChapter","Kitab", new {imam=Model.Chapter.Imam.SlugUrl,chapterId=Model.Chapter.SlugUrl })" rel="nofollow">Bab : @Model.Chapter.Name</a>
            </div>
        </div>
    </div>
</div>
