@model IEnumerable<ScraBoy.Features.CMS.HomeBlog.CommentViewModel>

<div id="products" class="row view-group">

    @foreach(var item in Model.Take(6))
            {
        <div class="item grid-group-item col-xs-4 col-lg-4">
            <div class="media mb-4">
                <div class="img-event">
                    <img class="d-flex mr-3 rounded-circle" src="@Url.Content(item.User.UrlImage)" style="height: 80px; width:80px" alt="">
                </div>
                <div class="media-body">
                    <a href="@Url.Action("Profile","User",new { userId = item.User.SlugUrl })">
                        <h5 class="mt-0">@item.User.DisplayName</h5>
                    </a> <span class="text-muted">@item.Comment.PostedOn.TimeAgo() on</span>
                    <a href="@Url.Action("Post","HomeBlog",new { postId = item.Post.Id })">@item.Post.Title</a>
                        <p>@item.Comment.Content.ReadMore(50)</p>
                </div>
            </div>
        </div>
    }
</div>


