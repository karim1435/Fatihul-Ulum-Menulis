@model IEnumerable<ScraBoy.Features.CMS.HomeBlog.BlogViewModel>
<div class="card-body">
    <div class="row">
        <div class="col-md-12">
            @foreach(var item in Model.Take(5))
            {
                <div class="media mb-4">
                    <img class="d-flex mr-3 " src="@Url.Content(item.Post.UrlImage)" style="height: 80px; width:80px" alt="">
                    <div class="media-body">
                        <a href="@Url.Action("Post","HomeBlog",new { postId = item.Post.Id })">
                            <h5 class="mt-0">@item.Post.Title</h5>
                        </a>
                        <p>@item.Post.Content.ReadMore(50)</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>