@model ScraBoy.Features.CMS.HomeBlog.BlogViewModel


@if(ViewBag.IsIndex)
{
    <div class="card mb-4">

        <div class="card-text text-muted">
            Posted by <a href="#">@Model.Author</a> on @Model.Published.Value.ToString("yyyy-MM-dd")
        </div>
        <img class="card-img-top" src="@Url.Content(Model.UrlImage)" style="height: 380px;" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">
                @Html.ActionLink(Model.Title,"post",new { controller = "HomeBlog",postId = Model.PostId })
            </h2>
            <p class="card-text">@Html.Raw(Model.Content)</p>
            <a href="@Url.Action("Post",new { controller="HomeBlog", postId=Model.PostId})" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">

            @Html.Partial("_RenderVoting",Model)
            Topics @Html.Partial("_RenderTags",Model.PostTags.Tags.Distinct())
        </div>
    </div>
}
else
{
    <div class="col-lg-8">


        <!-- Title -->
        <h1 class="mt-4">@Model.Title</h1>
        <!-- Author -->
        <p class="lead">
            Topics: @Html.Partial("_RenderTags",Model.PostTags.Tags.Distinct())
            Category: @Html.Partial("_RenderCategory",Model.PostCategories.Names)
        </p>
        <hr>
        <!-- Preview Image -->
        <img class="img-fluid rounded" style="height" src="@Url.Content(Model.UrlImage)" alt="">
        <hr>
        <!-- Post Content -->
        @Html.Raw(Model.Content)
        <hr>
        <div class="card-login text-success">
            @Html.Partial("_RenderVoting",Model)
        </div>
        @Html.Partial("_CommentForm",Model)

        @Html.Partial("_RenderComment",Model.Comments)

    </div>
}
