@model ScraBoy.Features.CMS.User.CMSUser

@{
    ViewBag.Title = Model.DisplayName + "'s " + "Profile";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
    ViewBag.Single = false;
}
<style>
    body {
        background: #F7F7F7 !important;
    }
</style>
<link href="~/Content/profile.css" rel="stylesheet" />
<div class="container">
    <br />
    <div class="card">
        <div class="p-3 text-center">
            <div class="card-body">
                <h1 class="display-4">@Model.DisplayName</h1>

                <img src="@Url.Content(Model.UrlImage)" style="border-radius:50%; height:200px; width:200px;" alt="default avatar">
                <p class="lead">@Html.Raw(Model.Description)</p>
                <p class="lead">
                    <a style="font-size:20px" class="label label-primary" href="#" role="button">@Model.CurrentRole</a>
                </p>
                <p class="lead">
                    <span title="@Model.TotalScore Point" class="label label-success">@Model.TotalScore.FormatNumber() Point</span>
                    <div>
                        <span class="lead label label-success">@Model.TotalPost posts</span>
                        <span class="lead label label-warning">@Model.TotalComment comments</span>
                        <span class="lead label label-danger">@Model.TotalLike likes</span>
                        <span class="lead label label-info">@Model.TotalView views</span>
                    </div>
                </p>

            </div>
            <div class="small">
                @if(!string.IsNullOrEmpty(Model.FbProfile))
                {
                    <a target="_blank" class="btn btn-raised btn-info" href="@Model.FbProfile" title="Facebook Profile" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
                        <i class="fa fa-facebook" aria-hidden="true"></i>
                    </a>
                }
                @if(!string.IsNullOrEmpty(Model.InstagramProfile))
                {
                    <a target="_blank" class="btn btn-raised btn-info" href="@Model.InstagramProfile" title="IG Profile">
                        <i class="fa fa-instagram" aria-hidden="true"></i>
                    </a>
                }
                @if(!string.IsNullOrEmpty(Model.TwitterProfile))
                {
                    <a target="_blank" class="btn btn-raised btn-info" href="@Model.TwitterProfile" title="Twitter Profile">
                        <i class="fa fa-twitter" aria-hidden="true"></i>
                    </a>
                }
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        @foreach(var item in Model.Posts)
        {
            <div class="item col-xs-4 col-lg-4">
                <div class="thumbnail card">
                    <div class="img-event">
                        <img style="height:200px; width:400px;" class="group list-group-image img-fluid" src="@Url.Content(item.UrlImage)" alt="@item.Title" />
                    </div>
                    <div class="caption">
                        <div class="col-xs-12 col-md-12">
                            <div class="group card-title inner list-group-item-heading text-muted">
                                @item.Published.Value.FormatDate() | @Html.Partial("_RenderCategory",item.Category.Name)
                                by <a href="@Url.Action("Profile","HomeBlog",new { userId= item.Author.SlugUrl})">
                                    @item.Author.DisplayName
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="caption">
                        <div class="col-xs-12 col-md-12">
                            <h5 class="group card-title inner list-group-item-heading">
                                @Html.ActionLink(item.Title,"post",new { controller = "HomeBlog",postId = item.Id },new { @class = "text-dark" })
                            </h5>
                            <p class="group inner list-group-item-text">
                                @item.Content.ReadMore(167)
                                <a href="@Url.Action("Post",new { controller = "HomeBlog",postId = item.Id })">
                                    Continue Reading
                                </a>
                            </p>

                            <div class="row">
                                <div class="col-xs-12 col-md-12">
                                    @Html.Partial("_RenderFooter",item)
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <br />
</div>