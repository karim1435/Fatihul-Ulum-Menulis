@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<ScraBoy.Features.CMS.Interest.Voting>

@{
    ViewBag.Title = "Activity List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@AntiForgery.GetHtml()
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <h2> <i class="fa fa-history"></i> Activity List</h2>
        @using(Html.BeginForm("Search","Voting",FormMethod.Get))
        {
            @Html.Partial("~/Views/Widgets/_Search.cshtml")
        }
    </div>
    <div class="card-body">
        @foreach(var item in Model)
            {
            <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle" src="@Url.Content(item.User.UrlImage)" style="height: 80px; width:80px" alt="">
                <div class="media-body">
                    <a href="@Url.Action("Profile","HomeBlog",new { userId= item.User.Id})">
                        <h5 class="mt-0">@item.User.DisplayName</h5>
                    </a> <span>Liked</span>
                    <a href="@Url.Action("Post","HomeBlog",new { postId = item.PostId })">@item.Post.Title</a>   @item.PostedOn.TimeAgo()
                    <br />
                    <a href=@Url.Action("Post","HomeBlog",new { postId = item.PostId })>
                        View <i class="fa fa-eye"></i>
                    </a>
                </div>
            </div>
        }
        @if(Model.Count() > 0)
            {
            <text>Page</text> @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) <text>Of</text> @Model.PageCount
            @Html.PagedListPager(Model,page => Url.Action("Index",new { page = page,currentFilter = ViewBag.Filter }))
        }
    </div>
</div>