@model IEnumerable<ScraBoy.Features.Hadist.Meaning.Translation>

@{
    var original = ViewBag.original as ScraBoy.Features.Hadist.Book.Kitab;
}

@{
    ViewBag.Title = "Translation List";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    <br />
    <a href="@Url.Action("AddTranslation","Translation")" class="btn btn-success">
        Add Translation
    </a>

    @Html.Partial("~/Views/Widgets/_SortBy.cshtml")

    @Html.Partial("_Info",original)

    @foreach(var item in Model)
    {
        <div style="background-color:#EBC390" class="card mb-3">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="table text-justify" id="dataTable" width="100%" cellspacing="0">
                        <p style="font-size:20px" ; dir="ltr">
                            @item.Content
                        </p>
                        <p dir="ltr" class="label label-dark">Languange: @item.Language.Name</p>
                        <a class="label label-primary" href=@Url.Action("EditTranslation","Translation",new { id = item.Id })>
                            Edit <i class="fa fa-pencil"></i>
                        </a>
                        <a class="label label-danger" href=@Url.Action("Delete","Translation",new { id = item.Id })>
                            Delete <i class="fa fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>