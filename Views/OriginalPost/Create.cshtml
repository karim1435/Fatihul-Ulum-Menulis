@model ScraBoy.Features.Translating.OriginalPostModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="col-md-9">
    <div class="form-horizontal">
        @using(Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <h4>Add</h4>
                <hr />
                @Html.ValidationSummary(true)
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.Title,new { @class = "control-label col-sm-2" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Title,new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Title)
                    </div>
                </div>
                <hr />  
                <div class="form-group">
                    @Html.LabelFor(model => model.Content,
                    new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Content,
                        new
                        {
                            @rows = 10,
                            @class = "form-control",
                            @placeholder = "Place the description here"
                        })

                        @Html.ValidationMessageFor(model => model.Content)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-plus"></span> Sign in
                        </button>
                    </div>
                </div>
        }
    </div>

    <hr />
    <div>
        @Html.ActionLink("Back to List","Index")
    </div>
</div>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>
