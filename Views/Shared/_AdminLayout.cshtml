@using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="prev" href="http://www.fatihululum.site/" />
    <link rel="next" href="http://www.fatihululum.site/admin/" />
    <link rel="shortcut icon" href="@Url.Content("~/Image/icon.ico")" type="image/x-icon" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/sb-admin.css" rel="stylesheet" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css">


</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">
        <a class="navbar-brand mr-1" href="@Url.Action("Index","Admin")">Home</a>
        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fa fa-bars"></i>

        </button>
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <a href="@Url.Action("Create", "Post")" class="btn btn-primary">
                    Write
                    <span class="fa fa-plus" aria-hidden="true"></span>
                </a>
            </div>

        </form>
        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-user-circle"></i>
                    <span>@User.Identity.GetUserName()</span>
                </a>

                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    @{
                        if(User.Identity.IsAuthenticated)
                        {
                            <a class="dropdown-item" href="@Url.Action("Edit","User",new {username = User.Identity.Name })">Setting <i class="fa fa-cog"></i></a>
                        }
                    }
                    <div class="dropdown-divider"></div>
                    @{

                        Html.RenderAction("AuthenticationLink",new { controller = "admin" });
                    }
                </div>
            </li>
        </ul>

    </nav>

    <div id="wrapper">
        <!-- Sidebar -->
        @Html.Partial("_SidebarPartial")

        <div id="content-wrapper">
            <div class="container-fluid">
                @RenderBody()

            </div>
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Fatihul Ulum @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
        <!-- /.content-wrapper -->
    </div>

    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/jquery.easing.min.js"></script>

    <script src="~/js/jquery-2.1.1.min.js"></script>
    <script src="~/js/jquery-ui.min-1.11.1.js"></script>
    <script src="~/js/admin.js"></script>

    <script src="~/js/sb-admin.js"></script>

    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.js"></script>

    @RenderSection("scripts",required: false)
</body>
</html>