@model ScraBoy.Features.CMS.Blog.Post

@{
    ViewBag.Title = "Post Preview";

    ViewBag.IsIndex = false;
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <!-- Title -->
            <h1 class="mt-4">@Model.Title</h1>
            <!-- Author -->
            <p class="lead">
                Topics: @Html.Partial("~/Views/HomeBlog/_RenderTags.cshtml",Model.Tags.Distinct())
                Category: @Html.Partial("~/Views/HomeBlog/_RenderCategory.cshtml",Model.Category.Name)
            </p>
            <hr>
            <!-- Preview Image -->
            <img class="img-fluid rounded" style="height" src="@Url.Content(Model.UrlImage)" alt="">
            <hr>
            <!-- Post Content -->
            @Html.Raw(Model.Content)
            <hr>
        </div>
    </div>
</div>


