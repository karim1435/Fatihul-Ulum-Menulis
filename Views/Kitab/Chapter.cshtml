@model IEnumerable<ScraBoy.Features.Hadist.Book.Chapter>

@{
    ViewBag.Title = "Chapter";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<div class="container">
    <br />
    <div class="card-body">
        <div class="table-responsive">
            <table dir="rtl" class="table table-bordered text-justify" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("FindByChapter","Kitab",new { chapterId= item.Id})">@item.Name</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
</div>
